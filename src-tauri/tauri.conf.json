{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "mahjong-player-app",
  "version": "0.1.0",
  "identifier": "com.coralsundy.mjplayer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run build:all-dev && npm run server",
    "beforeBuildCommand": "npm run build:all-docker"
  },
  "app": {
    "windows": [
      {
        "title": "Mahjong Player App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
