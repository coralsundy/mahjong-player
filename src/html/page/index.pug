- var page = 'index'

doctype html
html(lang="ja")
  
  head
    include ../inc/meta

    include ../inc/ogp
    if img_game_url
      +ogp('電脳麻将', 'HTML5 + Javascriptで動作する麻雀アプリ', 
            img_game_url)
    else
      +ogp('電脳麻将', 'HTML5 + Javascriptで動作する麻雀アプリ', 
            base_url + '/img/game.png')

    include ../inc/style
    include ../inc/script
  
  body.title
    include ../inc/loaderr
    include ../inc/navi
    include ../inc/title
    include ../inc/loaddata

    include ../inc/file
    include ../inc/stat
    include ../inc/board
    .version ver. #{version} #{version_qualifier}

  footer
    include ../inc/footer
