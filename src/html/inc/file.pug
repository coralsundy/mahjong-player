#file
  h1
    img(src="img/logo.png" alt="電脳麻将")
    if page == 'paipu'
      |  牌譜ビューア
    if page == 'netplay'
      |  ネット対戦
  .version ver. #{version} #{version_qualifier}
  
  .file.hide

    if page == 'index'
      a.start 対局開始
    if page == 'netplay'
      .error.hide
      .netplay
        img(src="img/icon.png" title="guest")
        span.name
        form.room
          input(name="room_no" placeholder="ルーム")
          input(type="submit" value="入室")
        form.room
          input(type="submit" value="ルーム作成")
        form.logout(method="POST" action="server/logout")
          input(type="submit" value="ログアウト")

    if page == 'index' || page == 'netplay'
      .button
        a.stat
          img(src="img/icon-dotlist.png")
          | 牌譜集計
        |
        |
        a.download
          img(src="img/icon-download-alt.png")
          | 牌譜保存

    .list
      .row
        .button
          a.replay
            img(src="img/icon-play.png")
            | 再生
          |
          |
          a.edit
            img(src="img/icon-edit.png")
            | 編集
          |
          |
          a.download
            img(src="img/icon-download-alt.png")
            | 保存
          |
          |
          a.delete
            img(src="img/icon-trash.png")
            | 削除
          |
          |
          if page == 'paipu'
            span.move
              img(src="img/icon-resize-vertical.png")
        .content
          .title
          .player
          
    if page == 'paipu'
      .error.hide
      .loading.hide
        .blink 牌譜取得中......
      label.upload
        img(src="img/icon-upload-alt.png")
        | 牌譜追加
        input(type="file" multiple)
      label.storage
        input(name="storage" type="checkbox")
        | ローカルストレージ
      .button
        a.stat
          img(src="img/icon-dotlist.png")
          | 牌譜集計
        |
        |
        a.edit
          img(src="img/icon-edit.png")
          | 牌譜作成
        |
        |
        a.download
          img(src="img/icon-download-alt.png")
          | 牌譜保存
      form.tenhou.hide
        input(name="url" placeholder="天鳳 牌譜ID/URL")
        input(type="image" src="img/icon-squaresearch.png" alt="検索" align="top")
